pipeline {
  agent {
    label 'linux'
  }

  environment {
    NODE_VERSION = '18'
  }

  stages {
    stage('Warm-up') {
      steps {
        echo 'Изчакване за освобождаване на executor...'
        sh 'sleep 10'
      }
    }

    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Setup Node.js') {
      steps {
        sh '''
          curl -fsSL https://deb.nodesource.com/setup_${NODE_VERSION}.x | sudo -E bash -
          sudo apt-get install -y nodejs
        '''
      }
    }

    stage('Install dependencies') {
      steps {
        sh 'npm ci'
      }
    }

    stage('Build') {
      steps {
        script {
          try {
            sh 'npm run build'
          } catch (err) {
            echo 'Няма дефиниран build скрипт – продължаваме нататък.'
          }
        }
      }
    }

    stage('Start server') {
      steps {
        echo 'Стартиране на сървъра във фонов режим...'
        sh 'nohup npm run start &'
        sh 'sleep 5'
      }
    }

    stage('Run tests') {
      steps {
        echo 'Изпълняване на тестовете...'
        sh 'npm test'
      }
    }
  }
}
