pipeline {
  agent {
    label 'linux'
  }

  environment {
    NODE_VERSION = '18'
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Setup Node.js') {
      steps {
        sh '''
          curl -fsSL https://deb.nodesource.com/setup_${NODE_VERSION}.x | sudo -E bash -
          sudo apt-get install -y nodejs
        '''
      }
    }

    stage('Install dependencies') {
      steps {
        sh 'npm ci'
      }
    }

    stage('Build') {
      steps {
        sh 'npm run build || echo "No build script defined"'
      }
    }

    stage('Start server') {
      steps {
        sh 'nohup npm run start &'
        sh 'sleep 5'
      }
    }

    stage('Run tests') {
      steps {
        sh 'npm test'
      }
    }
  }
}
